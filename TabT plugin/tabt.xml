<?xml version="1.0" encoding="utf-8"?>
    <extension version="3.1" type="plugin" group="content" method="upgrade">
        <name>TabT Competition Info v2.0</name>
        <author>Tom Van Aken</author>
        <creationDate>September 11th, 2017</creationDate>
        <copyright>Tom Van Aken</copyright>
        <license>GNU General Public License</license>
        <authorUrl>http://www.ttc-leugenberg.be</authorUrl>
        <version>2.0</version>
        <description>TABT_PLG_INTRO</description>
        <files>
            <filename plugin="tabt">tabt.php</filename>
            <filename>tabt_data.php</filename>
            <filename>tabt_helper.php</filename>
            <filename>css/tabt.css</filename>
            <filename>index.html</filename>
        </files>
        <languages>
		<language tag="en-GB">en-GB.plg_content_tabt.ini</language>
		<language tag="nl-NL">nl-NL.plg_content_tabt.ini</language>
            <language tag="en-GB">en-GB.plg_content_tabt.sys.ini</language>
		<language tag="nl-NL">nl-NL.plg_content_tabt.sys.ini</language>
	</languages>
        <config>
            <fields name="params">
                <fieldset name="basic">
                    <field name="federatie" type="radio" label="TABT_FED_LABEL" default="TABT_FED_DEFAULT" description="TABT_FED_DESCR">
                        <option value="sporta">TABT_FED_SPORTA</option>
                        <option value="vttl">TABT_FED_VTTL</option>
                    </field>
                    <field name="clubId" type="text" default="" label="TABT_CLUBID_LABEL" description="TABT_CLUBID_DESCR" />
                </fieldset>
            </fields>
        </config>
    </extension>
